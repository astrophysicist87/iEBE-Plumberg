#!/bin/bash
#PBS -l walltime=168:00:00
#PBS -l nodes=1:ppn=1
#PBS -j oe
#PBS -S /bin/bash

ulimit -n 1000

# list of command-line arguments:
# workingDirectory: where the code is being run

# move to working directory
cd $workingDirectory
echo 'Now working in '`pwd`
echo 'Should be in' $workingDirectory

time nice -n 0 ./cfwr.e CF_npphi=`echo $NPPHI` CF_npT=`echo $NPT` CF_npY=`echo $NPY` \
						chosenParticlesMode=0 CF_resonanceThreshold=`echo $RESFRAC` \
						qtnpts=`echo $NQT` qxnpts=`echo $NQX` qynpts=`echo $NQY` qznpts=`echo $NQZ` \
						delta_qx=0.001 delta_qy=0.001 delta_qz=0.001 1> CFWR_record.out 2> CFWR_err.out

\rm cfwr.e
\rm results/*.h5
\rm results/__*.tmp

echo 'Finished processing and cleaning up'
